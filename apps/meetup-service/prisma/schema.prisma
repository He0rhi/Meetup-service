generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meetup {
  id       String   @id @default(uuid())
  title    String
  date     DateTime
  lat      Float    
  lng      Float    

  tags     Tag[]    @relation("MeetupTags") // Связь many-to-many с Tag

  // Обратная связь через MeetupTag
  meetupTags MeetupTag[]
}

model Tag {
  id       String   @id @default(uuid())
  name     String   @unique
  meetups  Meetup[] @relation("MeetupTags") // Связь many-to-many с Meetup

  // Обратная связь через MeetupTag
  meetupTags MeetupTag[]
}

model MeetupTag {
  meetupId String
  tagId    String

  meetup   Meetup @relation(fields: [meetupId], references: [id]) 
  tag      Tag    @relation(fields: [tagId], references: [id])

  @@id([meetupId, tagId]) 
}
