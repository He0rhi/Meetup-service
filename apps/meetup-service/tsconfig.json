{
  "compilerOptions": {
    "types": ["node", "eslint"],         
    "typeRoots": ["node_modules/@types", "src/types"], 
    "strictPropertyInitialization": false,
    "target": "ES6",
    "module": "commonjs",                
    "moduleResolution": "node",           
    "esModuleInterop": true,             
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
   
    "outDir": "./dist",
"rootDirs": ["./src", "../../prisma"] ,
   "strict": true
  },
  "include": [
    "src/**/*.ts",
      "../../prisma/**/*.ts"
  ]
}
